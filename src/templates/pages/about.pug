doctype html
html(lang='ru')
    include ../common/head
    body
        .wrapper
            .preloader#preloader
                .preloader__svg-cont
                    svg.preloader__svg(version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                    width="144px" height="144px" viewBox="0 0 144 144" enable-background="new 0 0 144 144" xml:space="preserve")
                        circle.circle_1(opacity="0.4" fill="none" stroke="#FFFFFF" stroke-width="4" stroke-miterlimit="10" enable-background="new" cx="72" cy="71.999" r="70")
                        circle.circle_2(opacity="0.7" fill="none" stroke="#FFFFFF" stroke-width="3.8938" stroke-miterlimit="10" enable-background="new" cx="72" cy="72" r="55")
                        circle.circle_3(fill="none" stroke="#FFFFFF" stroke-width="4" stroke-miterlimit="10" cx="72" cy="72" r="40")
                        text.preloader__text#preloader__text(transform="matrix(1 0 0 1 51.5391 79.0127)" fill="#FFFFFF" font-family="'ArialMT'" font-size="24") 0%
            .container
                section.blog
                    include ../common/header
                    .user-about
                        .foto
                            img.foto__user(src='images/img/photo.jpg', alt='my photo')
                        .user-name
                            h1.title Burdyga Daria
                            p.user__text My personal website
                    a.arrow-scroll(href='#')
                        svg.icon__scroll(viewbox='0 0 26 16', width='26', height='16')
                            use(xlink:href='images/icons/sprite.svg#arrow_down')
                    .about__triangle
                        svg.about__triangle_white(xmlns="http://www.w3.org/2000/svg", viewbox="0 0 1000 85", preserveAspectRatio="none")
                            polygon.about__triangle_left(fill="#efeee9", points="0,0 0,86 500.8,86 500.8,75.5")
                            polygon.about__triangle_right(fill="#eeebdf" points="1000,0 1000,86 500,86 500,75.5")
                main.main-blog
                    .articles_blog
                        article.article__left
                            .article__left-content
                                .article__left-content_title
                                    h1.article__left_title About me
                                .article__left-content_text
                                    .foto_me
                                        img.foto__me_main(src='images/img/daria.jpg', alt='main photo')
                                    h2.subtitle_blog Who I am
                                    p.article__text
                                        | I am a web the developer from St. Petersburg. I am 29 years old.
                                        | I am engaged in development of the modern websites
                                        | and applications. I like to do interesting
                                        | and modern projects.
                        article.article__right
                            h2.subtitle How can I help you?
                            p.article__text
                                | Most of all I attract for Frontend development and can solve not completed tasks on Backend. 
                                | I also can do manual testing and automation.
                            .about__right-content
                                ul.skills-list
                                    each item in ['Frontend']
                                        li.skills-list__item
                                            .skills-row__title #{item}
                                                ul.skills-row__list
                                                    li.skills-row__item
                                                        svg.skill__circle(viewBox="0 0 110 110")
                                                            circle.circle__first(r="45" cx="50%" cy="50%" fill="none")
                                                            circle.circle__second.circle-95(r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)")
                                                        span.skill__title HTML
                                                    li.skills-row__item
                                                        svg.skill__circle(viewBox="0 0 110 110")
                                                            circle.circle__first(r="45" cx="50%" cy="50%" fill="none")
                                                            circle.circle__second.circle-85(r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)")
                                                        span.skill__title CSS
                                                    li.skills-row__item
                                                        svg.skill__circle(viewBox="0 0 110 110")
                                                            circle.circle__first(r="45" cx="50%" cy="50%" fill="none")
                                                            circle.circle__second.circle-15(r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)")
                                                        span.skill__title JavaScript
                                                    li.skills-row__item
                                                        svg.skill__circle(viewBox="0 0 110 110")
                                                            circle.circle__first(r="45" cx="50%" cy="50%" fill="none")
                                                            circle.circle__second.circle-15(r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)")
                                                        span.skill__title jQuery
                                ul.skills-list
                                    each item in ['Backend']
                                        li.skills-list__item
                                            .skills-row__title #{item}
                                                ul.skills-row__list
                                                    each skill in ['PHP', 'mySQl', 'Node.js']
                                                        li.skills-row__item
                                                            svg.skill__circle(viewBox="0 0 110 110")
                                                                circle.circle__first(r="45" cx="50%" cy="50%" fill="none")
                                                                circle.circle__second.circle-10(r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)")
                                                            span.skill__title #{skill}
                                ul.skills-list
                                    each item in ['WorkFlow']
                                        li.skills-list__item
                                            .skills-row__title #{item}
                                                ul.skills-row__list
                                                    each skill in ['Git', 'Gulp','Sass', 'Jade']
                                                        li.skills-row__item
                                                            svg.skill__circle(viewBox="0 0 110 110")
                                                                circle.circle__first(r="45" cx="50%" cy="50%" fill="none")
                                                                circle.circle__second.circle-75(r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)")
                                                            span.skill__title #{skill}
                section.section.map
                    .google-map#map(style="width: 100%; height: 100%;")
                    .map__contacts
                        .contacts
                            .contacts__title
                                .block-subtitle.contacts-subtitle Contacts
                            ul.contacts__list
                                li.contacts__list-item
                                    svg.icon__scroll_block(viewbox='0 0 26 16', width='26', height='16')
                                        use(xlink:href='images/icons/sprite.svg#skype')
                                    a.contacts__list-text(href='skype:daria burdyga') daria burdyga
                                li.contacts__list-item
                                    svg.icon__scroll_block(viewbox='0 0 26 16', width='26', height='16')
                                        use(xlink:href='images/icons/sprite.svg#envelope')
                                    a.contacts__list-text(href='mailto:dariaburdyga@gmail.com') dariaburdyga@gmail.com
                                li.contacts__list-item
                                    svg.icon__scroll_block(viewbox='0 0 26 16', width='26', height='16')
                                        use(xlink:href='images/icons/sprite.svg#phone')
                                    a.contacts__list-text(href='tel:+79817097100') 8 981 709 71 00
                                li.contacts__list-item
                                    svg.icon__scroll_block(viewbox='0 0 26 16', width='26', height='16')
                                        use(xlink:href='images/icons/sprite.svg#map_marker')
                                    a.contacts__list-text(href='Санкт-Петербург') Saint-Petersburg
            footer.footer.footer-map
                .footer__up
                    ul.footer-nav
                        li.footer-nav__item
                            a.footer-nav__link(href='my-works.html') My works
                        li.footer-nav__item
                            a.footer-nav__link(href='about.html') About me
                        li.footer-nav__item
                            a.footer-nav__link(href='blog.html') Test projects
                        li.footer-nav__item
                            a.footer-nav__link(href='index.html') Authorization
                    ul.social
                        li.social__item
                            a.social__link(href='#')
                                svg.social__icon_footer(viewbox='0 0 50 50', width='32', height='37', transition='.3s')
                                    use(xlink:href='images/icons/sprite.svg#vk_round')
                        li.social__item
                            a.social__link(href='#')
                                svg.social__icon_footer(viewbox='0 0 50 50', width='32', height='37', transition='.3s')
                                    use(xlink:href='images/icons/sprite.svg#github_round')
                        li.social__item
                            a.social__link(href='#')
                                svg.social__icon_footer(viewbox='0 0 50 50', width='32', height='37', transition='.3s')
                                    use(xlink:href='images/icons/sprite.svg#in_round')
                .footer__down
                    p.footer__dev © Burdyga Daria | 2018
