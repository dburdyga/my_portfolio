block variables

doctype html
html
  head
    meta(charset="utf-8")
    title #{title}
    meta(content="width=device-width, initial-scale=1" name="viewport")
    meta(content="ie=edge" http-equiv="x-ua-compatible")

    //- favicon block start
    //- favicon block.wrapper(class=`${flex ? 'wrapper_flex' : ''}`)
          .maincontent
            block content
              #parallax.parallax
                - for (var i = 1; i < 8; i++)
                .parallax__layer
                  img(src=`images/layer/layer-0${i}.png`).parallax__image end

    link(rel='stylesheet' href='/assets/css/app.css')
    script(src='/assets/js/app.js' defer)

  body
